{
	"name": "Go",
	"service": "api",
	"workspaceFolder": "/workspace",
	"dockerComposeFile": "../docker-compose.yml",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ritwickdey.liveserver"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker": {
			"version": "latest"
		}
	},
	"postAttachCommand": "sudo chown -R vscode /go/pkg"
}
